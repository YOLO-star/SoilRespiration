<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QueryActivity">

    <TextView
        android:id="@+id/tv_center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_start_week_house_time"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="选择起始时间"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_end_week_house_time"
        android:layout_marginTop="40dp"
        android:layout_below="@id/tv_start_week_house_time"
        android:text="选择结束时间"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/query_all"
        android:layout_below="@id/tv_end_week_house_time"
        android:layout_marginTop="80dp"
        android:text="查询"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>